@model address.ModelsData.DataDistricts

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить данный элемент планировочной структуры?</h3>
<div>
    <h4>Элемент планировочной структуры</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DistrictId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DistrictId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DistrictName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DistrictName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocalityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocalityName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AreaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AreaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegionName)
        </dd>
    </dl>
    
    <form asp-action="DisDelete">
        <input type="hidden" asp-for="DistrictId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="DisIndex">Вернуться к списку</a>
    </form>
</div>
