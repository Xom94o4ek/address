@model IEnumerable<address.Models.Regions>

@{
    ViewData["Title"] = "Регионы";
}

<h1>Регионы</h1>

<form asp-controller="Operation" asp-action="RegIndex">
    <p>
        Поиск по названию региона: <input type="text" name="id" />
        <input type="submit" value="Поиск" />
    </p>
</form>
<p>
    <a asp-action="RegCreate">Добавить новый регион</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegionName)
                </td>
                <td>
                    <a asp-action="RegEdit" asp-route-id="@item.RegionId">Редактировать</a> |
                    <a asp-action="RegDetails" asp-route-id="@item.RegionId">Детали</a> |
                    <a asp-action="RegDelete" asp-route-id="@item.RegionId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>