@model IEnumerable<address.ModelsData.DataDistricts>

@{
    ViewData["Title"] = "Элементы планировочной структуры";
}

<h1>Элементы планировочной структуры</h1>

<form asp-controller="Operation" asp-action="DisIndex">
    <p>
        Поиск по названию ЭПС: <input type="text" name="id" />
        <input type="submit" value="Поиск" />
    </p>
</form>
<p>
    <a asp-action="DisCreate">Добавить новый элемент планировочной структуры</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DistrictId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistrictName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DistrictId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistrictName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>
            <td>
                <a asp-action="DisEdit" asp-route-id="@item.DistrictId">Редактировать</a> |
                <a asp-action="DisDetails" asp-route-id="@item.DistrictId">Детали</a> |
                <a asp-action="DisDelete" asp-route-id="@item.DistrictId">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
