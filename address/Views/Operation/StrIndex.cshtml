@model IEnumerable<address.ModelsData.DataStreets>

@{
    ViewData["Title"] = "Улицы";
}

<h1>Улицы</h1>

<form asp-controller="Operation" asp-action="StrIndex">
    <p>
        Поиск по названию улицы: <input type="text" name="id" />
        <input type="submit" value="Поиск" />
    </p>
</form>
<p>
    <a asp-action="StrCreate">Добавить новую улицу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StreetId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistrictName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StreetId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistrictName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>
            <td>
                <a asp-action="StrEdit" asp-route-id="@item.StreetId">Редактировать</a> |
                <a asp-action="StrDetails" asp-route-id="@item.StreetId">Детали</a> |
                <a asp-action="StrDelete" asp-route-id="@item.StreetId">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
