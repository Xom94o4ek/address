@model address.Models.Regions

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить данный регион?</h3>
<div>
    <h4>Houses</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegionId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegionId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegionName)
        </dd>
    </dl>
    
    <form asp-action="RegDelete">
        <input type="hidden" asp-for="RegionId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="RegIndex">Вернуться к списку</a>
    </form>
</div>
