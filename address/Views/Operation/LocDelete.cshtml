@model address.ModelsData.DataLocalities

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить данный населенный пункт?</h3>
<div>
    <h4>Населенный пункт</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocalityId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocalityId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocalityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocalityName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AreaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AreaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegionName)
        </dd>
    </dl>
    
    <form asp-action="LocDelete">
        <input type="hidden" asp-for="LocalityId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="LocIndex">Вернуться к списку</a>
    </form>
</div>
