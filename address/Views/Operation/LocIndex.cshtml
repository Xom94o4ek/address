@model IEnumerable<address.ModelsData.DataLocalities>

@{
    ViewData["Title"] = "Населенные пункты";
}

<h1>Населенные пункты</h1>

<form asp-controller="Operation" asp-action="LocIndex">
    <p>
        Title: <input type="text" name="id" />
        <input type="submit" value="Filter" />
    </p>
</form>
<p>
    <a asp-action="LocCreate">Добавить новый населенный пункт</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocalityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LocalityId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocalityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AreaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegionName)
                </td>
                <td>
                    <a asp-action="LocEdit" asp-route-id="@item.LocalityId">Редактировать</a> |
                    <a asp-action="LocDetails" asp-route-id="@item.LocalityId">Детали</a> |
                    <a asp-action="LocDelete" asp-route-id="@item.LocalityId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
