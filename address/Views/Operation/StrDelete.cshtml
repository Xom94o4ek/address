@model address.ModelsData.DataStreets

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить данную улицу?</h3>
<div>
    <h4>Улица</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StreetId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StreetName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DistrictName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DistrictName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocalityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocalityName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AreaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AreaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegionName)
        </dd>
    </dl>
    
    <form asp-action="StrDelete">
        <input type="hidden" asp-for="StreetId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="StrIndex">Вернуться к списку</a>
    </form>
</div>
