@model IEnumerable<address.ModelsData.DataHouses>

@{
    ViewData["Title"] = "Дома";
}

<h1>Дома</h1>

<form asp-controller="Operation" asp-action="HouseIndex">
    <p>
        Поиск по названию улицы: <input type="text" name="id" />
        <input type="submit" value="Поиск" />
    </p>
</form>
<p>
    <a asp-action="HouseCreate">Добавить новый дом</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HouseNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Index)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Floors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entrances)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistrictName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HouseNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Index)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entrances)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistrictName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>
            <td>
                <a asp-action="HouseEdit" asp-route-id="@item.HouseId">Редактировать</a> |
                <a asp-action="HouseDetails" asp-route-id="@item.HouseId">Детали</a> |
                <a asp-action="HouseDelete" asp-route-id="@item.HouseId">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
