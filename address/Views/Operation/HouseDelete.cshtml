@model address.ModelsData.DataHouses

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить данный дом?</h3>
<div>
    <h4>Дом</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HouseNum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HouseNum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Index)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Index)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Floors)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Floors)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entrances)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entrances)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StreetId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetId)
        </dd>
    </dl>
    
    <form asp-action="HouseDelete">
        <input type="hidden" asp-for="HouseId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="HouseIndex">Вернуться к списку</a>
    </form>
</div>
